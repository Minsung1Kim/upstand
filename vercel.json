{
  "version": 2,
  "builds": [{ "src": "client/package.json", "use": "@vercel/static-build" }],
  "routes": [
    { "source": "/api/(.*)", "destination": "https://<your-railway-service>.up.railway.app/api/$1" },
    { "source": "/socket.io/(.*)", "destination": "https://<your-railway-service>.up.railway.app/socket.io/$1" },
    { "handle": "filesystem" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
